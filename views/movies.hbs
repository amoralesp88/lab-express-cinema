<div class="moviesDiv">

    <h2 class="movietext"><b>Ironhack Cinema</b></h2>
    <h5 class="movietext">Click on the movie to check the showtimes!</h5>

    <div class="container">
        <div class="row row-cols-3 ">
            {{#each movies}}
            <div class="card-deck">
                <div class="card" style="width: 12rem;">
                    <img class="card-img-top movieImage" src="{{image}}" class="card-img-top" alt="{{title}}">
                    <div class="card-body">
                        <h6 class="card-title">{{title}}</h6>
                        <a class="link" href="/movies/{{_id}}">See more</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>