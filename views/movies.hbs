<div class="moviesDiv">

    <h1>Ironhack Cinema</h1>
    <h5>Click on the movie to check the showtimes!</h5>
    <div class="container">
        <div class="row row-cols-3 ">
            {{#each movies as |movies|}}
            <div class="card">
                <img class="card-img-top movieImage" src="{{movie.images.[0].url}}" class="card-img-top"
                    alt="{{movie.name}}">
                <div class="card-body">
                    <h6 class="card-title">{{movie.name}}</h5>
                        <a href="/" class="btn btn-primary">See more</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>