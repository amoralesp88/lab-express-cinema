<div class="moviesDiv">
     <h2><b>Ironhack Cinema</b></h2>
        <h5>Click on the movie to check the showtimes!</h5>
    <div class="container">
        <div class="row row-cols-3 ">
            {{#each movies as |movie|}}
            <div class="card">
                <img class="card-img-top movieImage" src="{{movie.image}}" class="card-img-top" alt="{{movie.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{movie.title}}</h5>
                    <a href="/" class="btn btn-primary">See more</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>